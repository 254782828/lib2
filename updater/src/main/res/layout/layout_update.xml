<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="12dp"
      android:gravity="center"
      android:text="@string/update_tv_title"
      android:textColor="@color/update_text_color"
      android:textSize="20sp"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="0.66dp"
      android:background="#dfdfdf"
      />

  <LinearLayout
      android:id="@+id/update_layout_progress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="13dip"
      android:layout_marginRight="13dip"
      android:layout_marginTop="15dip"
      android:orientation="vertical"
      >

    <ProgressBar
        android:id="@+id/update_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal"
        />

    <TextView
        android:id="@+id/update_tv_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:gravity="end"
        android:textColor="@color/update_text_color"
        android:textSize="13sp"
        />

  </LinearLayout>

  <TextView
      android:id="@+id/update_tv_message"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="12dip"
      android:layout_marginLeft="20dip"
      android:layout_marginRight="20dip"
      android:layout_marginTop="12dip"
      android:lineSpacingMultiplier="1.4"
      android:textColor="@color/update_text_color"
      android:textSize="16sp"
      />

  <LinearLayout
      android:id="@+id/update_layout_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <Button
        android:id="@+id/update_btn_cancel"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/update_button"
        android:text="@string/update_btn_cancel"
        android:textColor="@color/update_text_color"
        android:textSize="16sp"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/update_btn_download"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/update_button"
        android:text="@string/update_btn_download"
        android:textColor="@color/update_text_color"
        android:textSize="16sp"
        style="?android:attr/borderlessButtonStyle"
        />

  </LinearLayout>

</LinearLayout>